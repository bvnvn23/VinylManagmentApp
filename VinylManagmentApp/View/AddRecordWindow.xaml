<Window x:Class="VinylManagmentApp.AddRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Record" Height="200" Width="200"
        MinWidth="200" MinHeight="200" MaxWidth="200" MaxHeight="200">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Record Title:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0"/>
        <TextBox Name="AddTitleTextBox" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"/>

        <TextBlock Text="Artist:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0"/>
        <TextBox Name="AddArtistTextBox" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>

        <TextBlock Text="Year of Release:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Margin="0,0,10,0"/>
        <TextBox Name="AddYearTextBox" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>
    </Grid>
</Window>